<div class="wrapper">
  <div class="dekai_midashi">
      投稿詳細
  </div>
  <a href="/users/<%= @bean.user.id %>"><%= @bean.user.name %></a>
  <div class="bean">
        <div class="title">
              名称
        </div>
        <p><%= @bean.brand %></p>
        <div class="Separator"><hr color="#ffffff"></div>

        <div class="title">
              購入場所
        </div>
        <p><%= @bean.shop %></p>
        <div class="Separator"><hr color="#ffffff"></div>

        <div class="title">
              生産地
        </div>
        <p><%= @bean.area %></p>
        <div class="Separator"><hr color="#ffffff"></div>

      <div class="title">
        フードペアリング
      </div>
      <p><%= @bean.food %></p>
      <div class="Separator"><hr color="#ffffff"></div>

      <div class="title">
        淹れ方
      </div>
      <p><%= @bean.brew %></p>
      <div class="Separator"><hr color="#ffffff"></div>

      <div class="title">
        メモ
      </div>
      <p>
      <div class="memo_area">
            <%= @bean.free %>
      </div>
      </p>
      <div class="Separator"><hr color="#ffffff"></div>
      <div class="thumbnail">
        <% @bean.bean_images.each do |image| %>
          <%= link_to image.image.url, 'data-lightbox': image.image do %>
            <%= image_tag image.image_url, size: "250x200" %>
          <% end %>
        <% end %>
      </div>

      <div class="bean_box">
        <!--- テイスティングの部分 ------------>
        <div class="title">
        テイスティング
        </div>
        <div class="box_item">
          <span class="star-rating">
              <div class="clean">
                <% (2..@bean.tasting).each do |n| %>
                    <div class="one_bean"> 
                      <% if n == 2 %>
                        <p class="chara transparent">酸味</p>
                      <% end %>
                      <% if n == 3 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 4 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 5 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 6 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 7 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 8 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 9 %>
                        <p class="chara">苦味</p>
                      <% end %>
                        <%= image_tag 'mink.png' %>
                    </div> 
                <% end %>
                </div>
              </div>
              <div class="bean_item">
                <div class="clean">
                  <% (1..9).each do |n| %>
                    <div class="one_bean">
                      <% if n == 1 %>
                        <p class="chara">酸味</p>
                      <% end %>
                      <% if n == 2 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 3 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 4 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 5 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 6 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 7 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 8 %>
                        <p class="chara_tspt">酸味</p>
                      <% end %>
                      <% if n == 9 %>
                        <p class="chara">苦味</p>
                      <% end %>
                      <%= image_tag 'hyggegray.png' %>
                    </div>   
                  <% end %>
                </div>
              </div>
          </span>
        </div>
        <!--- テイスティング部分終わり------->
      </div>



  </div>
</div>
