                            <%= link_to "編集する", edit_bean_path(t.id) %>
                            <%= link_to "削除する", bean_path(t.id), method: :delete, data: { confirm: "削除しますか？" }%>
                        <% end %>
                    </div>
                    <span class="date"><%= t.created_at.to_s(:datetime_jp) %></span>
