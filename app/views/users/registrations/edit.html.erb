<div class="heading">
  ユーザー情報変更
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
  <font color="#786e6a">ユーザー名</font><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
  <font color="#786e6a">Email</font><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <font color="#786e6a">現在のパスワード</font> <br />
  <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <!--アカウント編集時にプロフィールを入力できるようにフォームを追加-->
  <div class="field">
    <font color="#786e6a">プロフィール</font><br />
    <%= f.text_area :profile, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
  <font color="#786e6a">新しいパスワード</font>
    <br>
    <font color="#786e6a">最低6文字</font>
    <br>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      
      <!--<em><%= @minimum_password_length %> 最低文字数</em>-->

    <% end %>
  </div>

  <div class="field">
  <font color="#786e6a">新しいパスワード(確認)</font><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
  <br>

<% end %>

<p>アカウントを削除しますか？<%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<br>
<%= link_to "Back", :back %>