<center>
<div class="heading">
  ユーザー情報変更
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
  <div class="user_title2">
    <%= f.label :icon %><p>
  </div>
    <%= f.file_field :image %>
  </div>

  <div class="field">
  <div class="user_title2">
    ユーザー名
  </div>
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
  <div class="user_title2">
    Email
  </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <div class="user_title2">
    現在のパスワード
  </div>
  <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <!--アカウント編集時にプロフィールを入力できるようにフォームを追加-->
  <div class="field">
    <div class="user_title2">
      プロフィール
    </div>
      <%= f.text_area :profile, autofocus: true, class: "prf_txt" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <span class="user_title4">新しいパスワード</span>
    <span class="mini_txt">(最低6文字)</span>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      
      <!--<em><%= @minimum_password_length %> 最低文字数</em>-->

    <% end %>
  </div>

  <div class="field">
  <span class="user_title4">新しいパスワード</span>
  <span class="mini_txt">(確認)</span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新",class:"submit_btn" %>
  </div>
  <br>

<% end %>
<div class="user_title2">
  <p>アカウントを削除<%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"submit_btn" %></p>
</div>
<br>
<%= link_to "Back", :back %>